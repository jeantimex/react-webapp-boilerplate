{
  "name": "react-webapp-boilerplate",
  "version": "1.0.1",
  "description": "A sample project that demonstrates how to scaffold a web application using React and Webpack.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "webpack-dev-server",
    "prod": "cross-env NODE_ENV=production webpack-dev-server --env.prod=true",
    "build:bundle": "cross-env NODE_ENV=production webpack --env.prod=true",
    "build:langs": "babel-node ./scripts/translate.js",
    "build": "npm run clean && npm run build:bundle && npm run build:langs",
    "release": "npm run clean && babel-node ./scripts/release.js",
    "lint": "eslint ./app ./tests ./scripts ./webpack.config.babel.js",
    "test": "npm run lint && npm run jest",
    "jest": "cross-env NODE_ENV=test jest --config jest.conf.json --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeantimex/react-webapp-boilerplate.git"
  },
  "keywords": [
    "react",
    "webapp",
    "webpack",
    "boilerplate"
  ],
  "author": "Yong Su",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeantimex/react-webapp-boilerplate/issues"
  },
  "homepage": "https://github.com/jeantimex/react-webapp-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "glob": "^7.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "prettier": "^1.6.1",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "classnames": "^2.2.5",
    "history": "^4.7.2",
    "immutable": "^3.8.1",
    "lodash.noop": "^3.0.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.6",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.2.0",
    "todomvc-app-css": "^2.1.0",
    "uuid": "^3.1.0"
  }
}
