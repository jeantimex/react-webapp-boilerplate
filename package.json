{
  "name": "react-webapp-boilerplate",
  "version": "1.0.0",
  "description": "A sample project that demonstrates how to scaffold a web application using React and Webpack.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "webpack-dev-server",
    "prod": "cross-env NODE_ENV=production webpack-dev-server --env.prod=true",
    "build:bundle": "cross-env NODE_ENV=production webpack --env.prod=true",
    "build:langs": "babel-node ./scripts/translate.js",
    "build": "npm run clean && npm run build:bundle && npm run build:langs",
    "release": "npm run clean && babel-node ./scripts/release.js",
    "lint": "eslint ./client ./scripts ./webpack.config.js",
    "test": "npm run lint && karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeantimex/react-webapp-boilerplate.git"
  },
  "keywords": [
    "react",
    "webapp",
    "webpack",
    "boilerplate"
  ],
  "author": "Yong Su",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeantimex/react-webapp-boilerplate/issues"
  },
  "homepage": "https://github.com/jeantimex/react-webapp-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "glob": "^7.1.1",
    "karma": "^1.6.0",
    "karma-cli": "^1.0.1",
    "karma-intl-shim": "^1.0.3",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.2",
    "phantomjs-polyfill-object-assign": "0.0.2",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "classnames": "^2.2.5",
    "history": "^4.6.1",
